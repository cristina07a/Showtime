{% extends 'base.html.twig' %}

{% block title %}Band{% endblock %}

{% block content %}
    <h1 class="text-xl italic font-bold text-center pt-4">Band with index {{ band.id }}</h1>

    <div class="overflow-x-auto rounded-box border border-base-content/5 bg-base-100 m-8">
        <table class="table table-zebra">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ band.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ band.name }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ band.musicGenre.value }}</td>
            </tr>
            </tbody>
        </table>
    </div>

    <div class="flex gap-2 mt-4 justify-center">
        <button class="btn btn-soft"
                onclick="window.location.href='{{ path('app_band_index') }}'"> Back to list
        </button>
        <button class="btn btn-soft"
                onclick="window.location.href='{{ path('app_band_edit', {'id': band.id}) }}'"> Edit
        </button>
        {{ include('band/_delete_form.html.twig') }}
    </div>
{% endblock %}
