{% extends 'base_user.html.twig' %}

{% block title %}ÃŽnregistrare{% endblock %}

{% block content %}
    <form method="post" class="w-full max-w-md mx-auto mt-10 text-lg">
        <fieldset class="bg-base-200 border border-base-300 rounded-xl p-8 shadow-md">
            <legend class="text-xl font-semibold mb-4">Create new account</legend>

            {{ form_start(registrationForm) }}

            <div class="mb-6">
                {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block mb-2 font-medium'}}) }}
                {{ form_widget(registrationForm.email, {
                    'attr': {
                        'class': 'w-full px-4 py-3 rounded-md border border-gray-300 bg-white text-base focus:outline-none focus:ring-2 focus:ring-blue-500',
                        'autocomplete': 'email',
                        'autofocus': true
                    }
                }) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            <div class="mb-6">
                {{ form_label(registrationForm.plainPassword.first, null, {'label_attr': {'class': 'block mb-2 font-medium'}}) }}
                {{ form_widget(registrationForm.plainPassword.first, {
                    'attr': {
                        'class': 'w-full px-4 py-3 rounded-md border border-gray-300 bg-white text-base focus:outline-none focus:ring-2 focus:ring-blue-500',
                        'autocomplete': 'new-password'
                    }
                }) }}
                {{ form_errors(registrationForm.plainPassword.first) }}
            </div>

            <div class="mb-6">
                {{ form_label(registrationForm.plainPassword.second, null, {'label_attr': {'class': 'block mb-2 font-medium'}}) }}
                {{ form_widget(registrationForm.plainPassword.second, {
                    'attr': {
                        'class': 'w-full px-4 py-3 rounded-md border border-gray-300 bg-white text-base focus:outline-none focus:ring-2 focus:ring-blue-500',
                        'autocomplete': 'new-password'
                    }
                }) }}
                {{ form_errors(registrationForm.plainPassword.second) }}
            </div>

            <button type="submit" class="w-full btn btn-neutral text-lg py-3">Register</button>

            {{ form_end(registrationForm) }}

            <p class="mt-4 text-center">
                <a href="{{ path('app_login') }}" class="text-blue-600 underline">Already have an account? Login</a>
            </p>
        </fieldset>
    </form>
{% endblock %}
