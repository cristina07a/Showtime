{% extends 'base.html.twig' %}

{% block title %}Edit Booking{% endblock %}

{% block content %}
    <h1 class="text-xl italic font-bold text-center pt-4">Edit ticket {{ ticket.id }} for
        festival {{ ticket.festival.name }}</h1>

    {{ include('booking/_form.html.twig', {'button_label': 'Update'}) }}

    <div class="flex gap-2 mt-4 justify-center">
        <button class="btn btn-soft"
                onclick="window.location.href='{{ path('app_booking_index') }}'"> Back to list
        </button>
        {{ include('booking/_delete_form.html.twig') }}
    </div>
{% endblock %}
