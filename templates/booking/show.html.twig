{% extends 'base.html.twig' %}

{% block title %}Festival{% endblock %}

{% block content %}
    <h1 class="text-xl italic font-bold text-center pt-4">Booking with index {{ booking.id }}</h1>

    <div class="overflow-x-auto rounded-box border border-base-content/5 bg-base-100 m-8">
        <table class="table table-zebra">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ booking.id }}</td>
            </tr>
            <tr>
                <th>Ticket</th>
                <td>{{ booking.ticket.type }}</td>
            </tr>
            <tr>
                <th>user</th>
                <td>{{ booking.user ? booking.user.id : 'N/A' }}</td>
            </tr>
            <tr>
                <th>email</th>
                <td>{{ booking.bookingEmail }}</td>
            </tr>
            <tr>
                <th>fullName</th>
                <td>{{ booking.fullName }}</td>
            </tr>
            </tbody>
        </table>
    </div>

    <div class="flex gap-2 mt-4 justify-center">
        <button class="btn btn-soft"
                onclick="window.location.href='{{ path('app_booking_index') }}'"> Back to list
        </button>
        {{ include('booking/_delete_form.html.twig') }}
    </div>
{% endblock %}
