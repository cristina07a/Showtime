{% extends 'base.html.twig' %}

{% block title %}Festival{% endblock %}

{% block content %}
    <h1 class="text-xl italic font-bold text-center pt-4">Festival with index {{ festival.id }}</h1>

    <div class="overflow-x-auto rounded-box border border-base-content/5 bg-base-100 m-8">
        <table class="table table-zebra">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ festival.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ festival.name }}</td>
            </tr>
            <tr>
                <th>location</th>
                <td>{{ festival.location }}</td>
            </tr>
            <tr>
                <th>start_date</th>
                <td>{{ festival.startDate |date('d-m-Y') }}</td>
            </tr>
            <tr>
                <th>end_date</th>
                <td>{{ festival.endDate |date('d-m-Y') }}</td>
            </tr>
            <tr>
                <th>bands</th>
                <td>{% for bands in festival.bands %}
                        {{ bands.name|join(' ') }}{% endfor %}</td>
            </tr>
            </tbody>
        </table>
    </div>

    <div class="flex gap-2 mt-4 justify-center">
        <button class="btn btn-soft"
                onclick="window.location.href='{{ path('app_festival_index') }}'"> Back to list
        </button>
        <button class="btn btn-soft"
                onclick="window.location.href='{{ path('app_festival_edit', {'id': festival.id}) }}'"> Edit
        </button>
        {{ include('festival/_delete_form.html.twig') }}
    </div>
{% endblock %}
